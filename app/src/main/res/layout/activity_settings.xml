<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.jerek.drone.SettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/settings_ip_label" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/settings_ip_1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:singleLine="true"
            android:inputType="number"
            android:maxLength="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_dot"/>

        <EditText
            android:id="@+id/settings_ip_2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:singleLine="true"
            android:inputType="number"
            android:maxLength="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_dot" />

        <EditText
            android:id="@+id/settings_ip_3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:singleLine="true"
            android:inputType="number"
            android:maxLength="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_dot" />

        <EditText
            android:id="@+id/settings_ip_4"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:singleLine="true"
            android:inputType="number"
            android:maxLength="3" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_port_label"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/settings_port"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:singleLine="true"
        android:inputType="number"
        android:maxLength="4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_command_label"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/settings_command"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:singleLine="true"
        android:inputType="text"/>
</LinearLayout>
